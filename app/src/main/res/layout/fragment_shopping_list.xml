<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.mainFragments.ShoppingListFragment"
    android:layout_marginVertical="40dp"
    android:layout_marginHorizontal="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shopping List"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shoppingListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/addShoppingItemButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Shopping List" />

        <Button
            android:id="@+id/buyItemsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy items"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</FrameLayout>
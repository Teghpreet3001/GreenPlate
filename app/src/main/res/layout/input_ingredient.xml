<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.InputIngredientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:gravity="center" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Ingredient"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ingredientNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ingredientNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Ingredient Name"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ingredientQuantityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ingredientQuantityInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Quantity"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/caloriesPerServingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/caloriesPerServingInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Calories per Serving/Quantity"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/expirationDateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Optional Expiry Date (MM/DD/YYYY)"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/expirationDateInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/addIngredientBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Ingredient to Pantry"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/addShoppingItemBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Item to Shopping List"
            android:layout_marginBottom="20dp"/>
      
        <Button
            android:id="@+id/ExitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit Button"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</FrameLayout>
